@model IEnumerable<EventBooking>
@{
    ViewData["Title"] = "Get Events From History";
    Layout = "_DashBoardLayout";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Events History Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Total Tickets</th>
                        <th>Sold Tickets</th>
                        <th>Total Price For Sold Tickets</th>
                    </tr>
                </thead>
                <tbody>                      
                        @foreach (var item in Model)
                        {
                                <tr>
                                    <td>@item.Events.Name</td>
                                    <td>@item.TotalNumberOfTickets</td>
                                    <td>@item.TotalSoldTickets</td>
                                    <td>@item.TotalPrice</td>
                                </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>